<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMI健康体重计算"
                android:gravity="center"
                android:textSize="36sp"></TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/sexlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:layout_centerVertical="true">

                </TextView>
                <Spinner
                    android:layout_toRightOf="@id/sexlabel"
                    android:id="@+id/sex"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高"
                    android:layout_centerVertical="true">

                </TextView>
            <EditText
                android:id="@+id/htxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="请输入身高cm"
                android:layout_toRightOf="@id/h"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:layout_centerVertical="true"></TextView>
                <EditText
                    android:id="@+id/wtxt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入体重kg"
                    android:layout_toRightOf="@id/w"></EditText>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="计算"
                android:id="@+id/run"
                android:textSize="26sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"></Button>
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>