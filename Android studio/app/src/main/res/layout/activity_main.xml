<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#22c1dd"
        android:fontFamily="cursive"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="9"
        android:text="Click"
        android:textColor="#fffffd"
        android:textSize="36sp"
        tools:layout_editor_absoluteY="4dp"></Button>

    <Button
        android:id="@+id/btn_top2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#22c1dd"
        android:fontFamily="cursive"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="9"
        android:text="Click2"
        android:textColor="#fffffd"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_top"
        tools:layout_editor_absoluteY="163dp"></Button>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>